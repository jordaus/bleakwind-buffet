@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@using BleakwindBuffet.Data;
@using BleakwindBuffet.Data.Entrees;
@using BleakwindBuffet.Data.Sides;
@using BleakwindBuffet.Data.Drinks;
@using BleakwindBuffet.Data.Enums;
@using BleakwindBuffet.Data.Menu;
@using BleakwindBuffet.Data.Interface;

<title>Home Page</title>
<div class="flex-row">
    <h1 class="display-4">Bleakwind Buffet</h1>
    <p>
        We at Bleakwind Buffet are proud to bring you authentic fantasy meals straight from the world of Skyrim.
        Shake the blood off your sword and sake your thirst with one of our old-fashioned sailor sodas.
        Hack into a Smokehouse Skeleton with your dagger. Or vanquish the the mighty Thalmor Triple Burger!
        You’ve had a hard adventure and earned your loot, so spend it with us!
    </p>
    <p>Any purchase that contains an Entree, Side and Drink will result in a $1 discount.</p>

    <form>
        <div id="search">
            <input type="text" name="SearchTerms" />
            <input type="submit" value="Search">
        </div>

        <div id="filters">
            <h4>Order Item</h4>
            <label>
                <input type="checkbox" name="FoodType" value="Entree" />
                Entree
            </label>
            <label>
                <input type="checkbox" name="FoodType" value="Side" />
                Side
            </label>
            <label>
                <input type="checkbox" name="FoodType" value="Drink" />
                Drink
            </label>

            <h4>Calories</h4>
            <div>
                Between
                <input name="CalMin" type="number" min="0" max="2000" step="1" placeholder="min" />
                and
                <input name="CalMax" type="number" min="0" max="2000" step="1" placeholder="max" />
            </div>

            <h4>Price</h4>
            <div>
                Between
                <input name="PriceMin" type="number" min="0" max="20.0" step="0.01" placeholder="min" />
                and
                <input name="PriceMax" type="number" min="0" max="20.0" step="0.01" placeholder="max" />
            </div>
        </div>
    </form>
</div>
<div class="float-columns">
    <div>
        <h2>Entrees:</h2>
        @foreach (Entree e in Model.Entree)
        {
            <div class="MainItem">@e.ToString()</div>
            <div>Price: $@e.Price</div>
            <div>Calories: @e.Calories</div>
            <div class="desc">Desc: @e.Description</div>
        }
    </div>
    <div>
        <h2>Sides:</h2>
        @foreach (Side s in Model.Side)
        {
            <div class="MainItem">@s.ToString()</div>
            @foreach (Size size in Enum.GetValues(typeof(Size)))
            {
                <div>Price: $@s.Price</div>
                <div>Calories: @s.Calories</div>
            }
            <div class="desc">Desc: @s.Description</div>
        }
    </div>
    <div>
        <h2>Drinks:</h2>
        @foreach (Drink d in Model.Drink)
        {
            <div class="MainItem">@d.ToString()</div>
            @foreach (Size size in Enum.GetValues(typeof(Size)))
            {
                <div>Price: $@d.Price</div>
                <div>Calories: @d.Calories</div>
            }
            <div class="desc">Desc: @d.Description</div>
        }
    </div>
</div>

    <div class="float-columns">
        <div class="MainItem"> Soda Flavors </div>
        <div> Blackberry </div>
        <div> Cherry </div>
        <div> Grapefruit </div>
        <div> Lemon </div>
        <div> Peach </div>
        <div> Watermelon </div>
    </div>
