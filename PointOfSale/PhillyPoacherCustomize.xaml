<UserControl x:Class="PointOfSale.PhillyPoacherCustomize"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="680" Height="400">
    <!--Main design frame-->
    <Grid Background="Blue">
        <!--Big Label on top-->
        <Label FontSize="30" Margin="150,10,162,338">Customize Philly Poacher</Label>
        <!--Creates border-->
        <Border BorderBrush="White" BorderThickness="5" Margin="10"/>
        <!--Area for check box-->
        <StackPanel Margin="36,67,272,31">
            <CheckBox FontSize="20">
               Sirloin
            </CheckBox>
            <CheckBox FontSize="20">
                Onion
            </CheckBox>
            <CheckBox FontSize="20">
                Roll
            </CheckBox>
        </StackPanel>
        <!--Area for pricing-->
        <Button Click="Done_Click" Margin="183,118,309,243" FontSize="23">Done</Button>
    </Grid>
</UserControl>
