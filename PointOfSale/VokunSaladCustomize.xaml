<UserControl x:Class="PointOfSale.VokunSaladCustomize"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="680">
    <Grid Background="Blue">
        <!--Big Label on top-->
        <Label FontSize="20" Margin="260,10,199,338">Customize Vokun Salad</Label>
        <!--Creates border-->
        <Border BorderBrush="White" BorderThickness="5" Margin="10"/>
        <!--Area for check box-->
        <StackPanel Margin="36,67,447,31">
            <!--Size Box-->
            <ComboBox SelectedItem="{Binding Path=Size}">
                <ComboBoxItem>Small</ComboBoxItem>
                <ComboBoxItem>Medium</ComboBoxItem>
                <ComboBoxItem>Large</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <!--Area for pricing-->
        <Button Click="Done_Click" Margin="238,169,243,176" FontSize="23">Done</Button>
    </Grid>
</UserControl>
