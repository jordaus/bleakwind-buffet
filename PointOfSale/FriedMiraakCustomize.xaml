<UserControl x:Class="PointOfSale.FriedMiraakCustomize"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="680">
    <Grid Background="Blue">
        <!--Big Label on top-->
        <Label FontSize="20" Margin="227,10,236,338">Customize Fried Miraak</Label>
        <!--Creates border-->
        <Border BorderBrush="White" BorderThickness="5" Margin="10"/>
        <!--Area for check box-->
        <StackPanel Margin="36,67,450,31">
            <!--Size Box-->
            <ComboBox>
                <ComboBoxItem>Small</ComboBoxItem>
                <ComboBoxItem>Medium</ComboBoxItem>
                <ComboBoxItem>Large</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <Button Click="Done_Click" Margin="255,151,236,213" FontSize="23">Done</Button>
        <!--Area for pricing-->
    </Grid>
</UserControl>
