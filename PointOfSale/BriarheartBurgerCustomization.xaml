<UserControl x:Class="PointOfSale.BriarheartBurgerCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800" Height="400" Width="680">
    <!--Main frame design-->
    <Grid Background="Blue">
        <!--Main Text-->
        <Label FontSize="20" Margin="150,10,140,354">Customize Brairheart Burger</Label>
        <Border BorderBrush="White" BorderThickness="5" Margin="10"/>
        <!--List Box-->
        <StackPanel Margin="36,67,272,194">
            <CheckBox FontSize="20">
                Bun
            </CheckBox>
            <CheckBox FontSize="20">
                Ketchup
            </CheckBox>
            <CheckBox FontSize="20">
                Mustard
            </CheckBox>
            <CheckBox FontSize="20">
                Pickles
            </CheckBox>
            <CheckBox FontSize="20">
                Cheese
            </CheckBox>
        </StackPanel>
        <!--Pricing-->
        <Button FontSize="23" Click="Done_Click" Margin="148,206,374,150">Done</Button>
    </Grid>
</UserControl>
