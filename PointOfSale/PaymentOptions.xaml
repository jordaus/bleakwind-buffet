<UserControl x:Class="PointOfSale.PaymentOptions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="930">
    <StackPanel Background="Blue">
        <Label  FontSize="30">Choose A Payment Method:</Label>
        <Button FontSize="20" Content="Credit/Debit Card" ></Button>
        <Button FontSize="20" Content="Cash" ></Button>
        <Button Click="Back_Click" FontSize="20" Content="Go Back" ></Button>
    </StackPanel>
</UserControl>
